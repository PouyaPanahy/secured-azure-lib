{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {    
        "virtualNetworks_rg_name": {
            "defaultValue": "Network-rg",
            "type": "String"
        },
        "virtualNetworks_vnet_name": {
            "defaultValue": "internal-vnet",
            "type": "String"
        },
        "virtualNetworks_subnet_name": {
            "defaultValue": "/default",
            "type": "String"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "site_app_name": {
            "type": "string"
        }
    },
    "variables": {
		     "tagsArray": {
            "service": "PoC",
            "costs": "none"
         },		 
         "tenantId": "[subscription().tenantId]",  
         "keyvault_name": "Secured-Managed-kv",
         "contributors_objectId": "8c212170-481b-4e31-ba85-9ba0759f552c",
         "serverFarmId": "[concat('/subscriptions/', subscription().id,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
         "virtualnetworks_internal_vnet_externalid": "[concat('/subscriptions/', subscription().id,'/resourceGroups/', resourceGroup().name, '/providers/microsoft.network/virtualnetworks/', parameters('virtualNetworks_vnet_name'), '/subnets/default')]" ,
   
    
	},
    "resources": [       
        {           
        "name": "[variables('keyvault_name')]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2018-02-14",
        "location": "[resourceGroup().location]",
        "tags": "[variables('tagsArray')]",
        "dependsOn": [           
        ],
        "properties": {
          "enabledForDeployment": false,
          "enabledForTemplateDeployment": true,
          "enabledForDiskEncryption": false,
          "enableRbacAuthorization": false,
          "tenantId": "[variables('tenantId')]",
          "sku": {
            "name": "Standard",
            "family": "A"
          },
          "enableSoftDelete": true,
          "softDeleteRetentionInDays": 90,
          "networkAcls": {
            "defaultAction": "Deny",
            "bypass": "AzureServices",
            "ipRules": [],
            "virtualNetworkRules": [
              {
                "id": "[variables('virtualnetworks_internal_vnet_externalid')]",
                "ignoreMissingVnetServiceEndpoint": false
              }
            ]
          },
          "accessPolicies": [
            {
              "objectId": "[variables('contributors_objectId')]",
              "tenantId": "[variables('tenantId')]",
              "permissions": {
                "keys": [],
                "secrets": [
                  "Get",
                  "List",
                  "Set",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "certificates": []
              }
            }
          ]
        }
     },
      {
        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2018-02-01",
        "name": "[parameters('hostingPlanName')]",
        "location": "[resourceGroup().location]",
        "tags":"[variables('tagsArray')]",
        "sku": {
            "name": "S1",
            "tier": "Standard",
            "size": "S1",
            "family": "S",
            "capacity": 1
        },
        "kind": "app",
        "properties": {
            "perSiteScaling": false,
            "maximumElasticWorkerCount": 1,
            "isSpot": false,
            "reserved": false,
            "isXenon": false,
            "hyperV": false,
            "targetWorkerCount": 0,
            "targetWorkerSizeId": 0
        }
      },
      {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2018-11-01",
        "name": "[parameters('site_app_name')]",
        "location": "[resourceGroup().location]",
        "tags":"[variables('tagsArray')]",
        "kind": "app",
        "identity": {
            "type": "SystemAssigned"
        },
        "properties": {
            "enabled": true,
            "hostNameSslStates": [
                {
                    "name": "[concat(parameters('site_app_name'), '.azurewebsites.net')]",
                    "sslState": "Disabled",
                    "hostType": "Standard"
                },
                {
                    "name": "[concat(parameters('site_app_name'), '.scm.azurewebsites.net')]",
                    "sslState": "Disabled",
                    "hostType": "Repository"
                }
            ],
            "serverFarmId": "[variables('serverFarmId')]",
            "reserved": false,
            "isXenon": false,
            "hyperV": false,
            "siteConfig": {},
            "scmSiteAlsoStopped": false,
            "clientAffinityEnabled": true,
            "clientCertEnabled": false,
            "hostNamesDisabled": false,
            "containerSize": 0,
            "dailyMemoryTimeQuota": 0,
            "httpsOnly": false,
            "redundancyMode": "None"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
        ]
      },
      {
          "type": "Microsoft.Web/sites/hostNameBindings",
          "apiVersion": "2018-11-01",
          "name": "[concat(parameters('site_app_name'), '/', parameters('site_app_name'), '.azurewebsites.net')]",
          "location": "[resourceGroup().location]",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('site_app_name'))]"
          ],
          "properties": {
              "siteName": "[parameters('site_app_name')]",
              "hostNameType": "Verified"
          }
      }
    ],
    "outputs": {}
}