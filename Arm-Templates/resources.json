{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {    
        "virtualNetworks_rg_name": {
            "defaultValue": "Network-rg",
            "type": "String"
        },
        "virtualNetworks_vnet_name": {
            "defaultValue": "internal-vnet",
            "type": "String"
        },
        "virtualNetworks_subnet_name": {
            "defaultValue": "/default",
            "type": "String"
        },
        "virtualnetworks_internal_vnet_externalid": {
            "defaultValue": "/subscriptions/a6f564d4-e424-4cbb-b881-79aef78c437e/resourceGroups/network-rg/providers/microsoft.network/virtualnetworks/internal-vnet",
            "type": "String"
        },
        "hostingPlanName": {
            "type": "string"
        }
    },
    "variables": {
		 "tagsArray": {
            "service": "PoC",
            "costs": "none"
         },		 
         "tenantId": "[subscription().tenantId]",  
         "subscriptionId": "[subscription().id]",    
         "keyvault_name": "Secured-Managed-kv",
         "contributors_objectId": "8c212170-481b-4e31-ba85-9ba0759f552c"
	},
    "resources": [       
        {           
        "name": "[variables('keyvault_name')]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2018-02-14",
        "location": "[resourceGroup().location]",
        "tags": "[variables('tagsArray')]",
        "dependsOn": [           
        ],
        "properties": {
          "enabledForDeployment": false,
          "enabledForTemplateDeployment": true,
          "enabledForDiskEncryption": false,
          "enableRbacAuthorization": false,
          "tenantId": "[variables('tenantId')]",
          "sku": {
            "name": "Standard",
            "family": "A"
          },
          "enableSoftDelete": true,
          "softDeleteRetentionInDays": 90,
          "networkAcls": {
            "defaultAction": "Deny",
            "bypass": "AzureServices",
            "ipRules": [],
            "virtualNetworkRules": [
              {
                "id": "[concat(parameters('virtualnetworks_internal_vnet_externalid'), '/subnets/default')]",
                "ignoreMissingVnetServiceEndpoint": false
              }
            ]
          },
          "accessPolicies": [
            {
              "objectId": "[variables('contributors_objectId')]",
              "tenantId": "[variables('tenantId')]",
              "permissions": {
                "keys": [],
                "secrets": [
                  "Get",
                  "List",
                  "Set",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "certificates": []
              }
            }
          ]
        }
     },
      {
          "apiVersion": "2018-11-01",
          "name": "[parameters('hostingPlanName')]",
          "type": "Microsoft.Web/serverfarms",
          "location": "[resourceGroup().location]",
          "kind": "",
          "tags": {},
          "dependsOn": [],
          "properties": {
              "name": "[parameters('hostingPlanName')]",
              "workerSize": "[parameters('workerSize')]",
              "workerSizeId": "[parameters('workerSizeId')]",
              "numberOfWorkers": "[parameters('numberOfWorkers')]"
          },
          "sku": {
              "Tier": "[parameters('sku')]",
              "Name": "[parameters('skuCode')]"
          }
      },
      {
        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2018-02-01",
        "name": "[parameters('hostingPlanName')]",
        "location": "[resourceGroup().location]",
        "tags":"[variables('tagsArray')]",
        "sku": {
            "name": "S1",
            "tier": "Standard",
            "size": "S1",
            "family": "S",
            "capacity": 1
        },
        "kind": "app",
        "properties": {
            "perSiteScaling": false,
            "maximumElasticWorkerCount": 1,
            "isSpot": false,
            "reserved": false,
            "isXenon": false,
            "hyperV": false,
            "targetWorkerCount": 0,
            "targetWorkerSizeId": 0
        }
      }
    ],
    "outputs": {}
}