{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "virtualNetworks_rg_vnet_name": {
            "defaultValue": "managed-rg-vnet",
            "type": "String"
        }
    },
    "variables": {
		 "tagsArray": {
            "service": "PoC",
            "costs": "none"
         },		 
		 "rgName": "Managed-rg",
		 "rgLocation": "West Europe",
         "tenantId": "[subscription().tenantId]",
         "subscriptionId": "[subscription().id]",         
         "keyvault_name": "Managed-kv"
	},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[parameters('virtualNetworks_rg_vnet_name')]",
            "location": "westeurope",
            "tags": "[variables('tagsArray')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('virtualNetworks_rg_vnet_name'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_rg_vnet_name'))]"
            ],
            "properties": {
                "addressPrefix": "10.0.0.0/24",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {           
        "name": "[variables('keyvault_name')]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2018-02-14",
        "location": "[resourceGroup().location]",
        "tags": "[variables('tagsArray')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_rg_vnet_name'))]"
        ],
        "properties": {
          "enabledForDeployment": false,
          "enabledForTemplateDeployment": true,
          "enabledForDiskEncryption": false,
          "enableRbacAuthorization": false,
          "tenantId": "[variables('tenantId')]",
          "sku": {
            "name": "Standard",
            "family": "A"
          },
          "enableSoftDelete": true,
          "softDeleteRetentionInDays": 90,
          "networkAcls": {
            "defaultAction": "Deny",
            "bypass": "AzureServices",
            "ipRules": [],
            "virtualNetworkRules": []
          },
          "accessPolicies": []
        }
     }
    ],
    "outputs": {}
}