{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {    
        "virtualNetworks_rg_name": {
            "defaultValue": "Network-rg",
            "type": "String"
        },
        "virtualNetworks_vnet_name": {
            "defaultValue": "internal-vnet",
            "type": "String"
        },
        "virtualNetworks_subnet_name": {
            "defaultValue": "/default",
            "type": "String"
        }
    },
    "variables": {
		 "tagsArray": {
            "service": "PoC",
            "costs": "none"
         },		 
         "tenantId": "[subscription().tenantId]",  
         "subscriptionId": "[subscription().id]",    
         "keyvault_name": "Secured-Managed-kv",
         "resourceId_contributors": "8c212170-481b-4e31-ba85-9ba0759f552c"
	},
    "resources": [       
        {           
        "name": "[variables('keyvault_name')]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2018-02-14",
        "location": "[resourceGroup().location]",
        "tags": "[variables('tagsArray')]",
        "dependsOn": [           
        ],
        "properties": {
          "enabledForDeployment": false,
          "enabledForTemplateDeployment": true,
          "enabledForDiskEncryption": false,
          "enableRbacAuthorization": false,
          "tenantId": "[variables('tenantId')]",
          "sku": {
            "name": "Standard",
            "family": "A"
          },
          "enableSoftDelete": true,
          "softDeleteRetentionInDays": 90,
          "networkAcls": {
            "defaultAction": "Deny",
            "bypass": "AzureServices",
            "ipRules": [],
            "virtualNetworkRules": [
              {
                "id": "[resourceId(variables('subscriptionId'), parameters('virtualNetworks_rg_name'), 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworks_vnet_name'), parameters('virtualNetworks_subnet_name'))]"
              }
            ]
          },
          "accessPolicies": [
            {
              "objectId": "[reference(variables('resourceId_contributors'),'2019-08-01', 'full').identity.principalId]",
              "tenantId": "[variables('tenantId')]",
              "permissions": {
                "keys": [],
                "secrets": [
                  "Get",
                  "List",
                  "Set",
                  "Delete",
                  "Recover",
                  "Backup",
                  "Restore"
                ],
                "certificates": []
              }
            }
          ]
        }
     }
    ],
    "outputs": {}
}